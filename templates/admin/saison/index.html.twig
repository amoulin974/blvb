{% extends 'base.html.twig' %}
{% block title %}
    Toutes les saisons
{% endblock %}
{% block body %}
    <h1 class="h1">Toutes les saisons</h1>
    <a class="btn btn-soft btn-secondary" href="{{ path('admin_saison_new') }}">Cr√©er une nouvelle saison <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
        </svg>
    </a>

    <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100">
        <table class="border border-solid table table-xs table-zebra">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Favorite</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for saison in saisons %}

                <tr  class="hover:bg-base-300">
                    <td>{{ saison.id }}</td>
                    <td>{{ saison.nom }}</td>
                    <td class="text-center align-middle">
                        {%  if saison.favori %}
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 "><path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5" /></svg>
                        {% else %}
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 0 0 5.636 5.636m12.728 12.728A9 9 0 0 1 5.636 5.636m12.728 12.728L5.636 5.636" />
                            </svg>

                        {% endif %}
                    </td>
                    <td class="flex items-center gap-2">
                        <a href="{{ path('admin_saison_show', {'id': saison.id}) }}" class="btn btn-sm"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                            </svg>Voir
                        </a>
                        <a href="{{ path('admin_saison_edit', {'id': saison.id}) }}" class="btn tooltip btn-sm" data-tip="Modifier">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                            </svg> Editer
                        </a>

                        <form method="UPDATE" action="{{ path('admin_saison_favorite', {'id': saison.id}) }}">
                            <input type="hidden" name="_method" value="UPDATE">
                            <input type="hidden" name="_token" value="{{ csrf_token('favorite' ~ saison.id) }}">
                            <button type="submit" class="tooltip btn btn-sm" data-tip="Mettre en favori">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
                                </svg>
                                Rendre Favori
                            </button>
                        </form>

                        {{ include('admin/saison/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>



{% endblock %}
