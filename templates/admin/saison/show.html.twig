{% extends 'base.html.twig' %}
{% block title %}
    {{ saison.nom }}
{% endblock %}
{% block body %}
    <div class="container mx-auto max-w-5xl px-4">
        <h1 class="mb-6">Détails de la saison {{ saison.nom }}</h1>

        <div class="space-y-4">
            {% for phase in saison.phases %}
                {# Système de collapse pour chaque Phase [cite: 1] #}
                <div class="bg-base-100 border-base-300 collapse collapse-arrow border shadow-sm">
                    <input type="checkbox" class="peer" {% if phase.id == phaseOuverteId %}checked{% endif %} />
                    <div class="collapse-title flex items-center justify-between pr-12">
                        <div class="flex items-center">
                            <span class="font-bold text-lg">{{ phase.nom }}</span>
                            <span class="ml-4 text-sm opacity-60">Début : {{ phase.datedebut|date("d/m/Y") }}</span>
                        </div>

                        {# Actions d'administration de la Phase [cite: 76, 77, 78] #}
                        <div class="flex join items-center no-underline" onclick="event.stopPropagation();">
                            <a class="btn btn-xs btn-neutral join-item" href="{{ path("admin_phase_edit", {'id': phase.id}) }}">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                                </svg> Modifier
                            </a>
                            {{ include('admin/phase/_delete_form.html.twig', { size: 'btn-xs', join:'join-item' }) }}
                            {% if not loop.last and phase.cloturable==true %}
                                <form action="{{ path('admin_phase_cloturer', {'id': phase.id}) }}" method="POST" class="flex items-center">
                                    <button type="submit" class="btn btn-warning btn-xs join-item" onclick="return confirm('Êtes-vous sûr de vouloir clôturer cette phase ? Cette action est irréversible.')">
                                        Clôturer
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    </div>

                    <div class="collapse-content">
                        {# Système d'onglets pour les Poules de la Phase  #}
                        <div class="tabs tabs-lift mt-4">
                            {% for poule in phase.poules %}
                            <input type="radio"
                                   name="tabs_admin_{{phase.id}}"
                                   class="tab"
                                   aria-label="{{ poule.nom }}"
                                   {% if (pouleOuverteId and poule.id == pouleOuverteId) or (not pouleOuverteId and loop.first) %}checked{% endif %} />
                                <div id="poule_{{ poule.id }}" class="tab-content bg-base-100 border-base-300 p-6 rounded-b-box">

                                    {# Actions d'administration de la Poule [cite: 83, 86, 88, 90] #}
                                    <div class="flex flex-wrap gap-2 mb-6 p-2 bg-base-200 rounded-lg">
                                        <a class="btn btn-xs btn-neutral" href="{{ path("admin_poule_edit", {'id': poule.id, origin: 'saison_show'}) }}">Modifier la poule</a>
                                        {{ include('admin/poule/_delete_form.html.twig', { size: 'btn-xs' }) }}

                                        {% if poule.equipes|length > 0 and poule.journees|length == 0 %}
                                            <form action="{{ path('admin_journee_createjournee', {'id': poule.id}) }}" method="POST">
                                                <button type="submit" class="btn btn-xs btn-success text-white">Créer les journées</button>
                                            </form>
                                        {% endif %}

                                        {% if poule.equipes|length > 0 and poule.journees|length > 0 %}
                                            <a class="btn btn-xs btn-info text-white" href="{{ path("admin_journee_getjourneecalendar", {'id': poule.id}) }}">Voir les journées</a>
                                        {% endif %}

                                        {% if poule.equipes|length > 0 and poule.journees|length > 0 and poule.parties|length == 0 %}
                                            <form action="{{ path('admin_partie_createpartie', {'id': poule.id}) }}" method="POST">
                                                <button type="submit" class="btn btn-xs btn-success text-white">Créer les matchs</button>
                                            </form>
                                        {% endif %}
                                    </div>

                                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                                        {# Liste des équipes [cite: 92] #}
                                        <div class="col-span-1">
                                            <p class="font-bold mb-2 text-sm border-b">Équipes :</p>
                                            <div class="flex flex-wrap gap-1">
                                                {% for equipe in poule.equipes %}
                                                    <span class="badge badge-outline badge-sm">{{ equipe.nom }}</span>
                                                {% else %}
                                                    <em class="text-xs">Pas d'équipe</em>
                                                {% endfor %}
                                            </div>
                                        </div>

                                        {# Liste des journées et matchs [cite: 94, 99] #}
                                        <div class="col-span-2">
                                            <p class="font-bold mb-2 text-sm border-b">Aperçu des journées :</p>
                                            <div class="space-y-4">
                                                {% for journee in poule.journees %}
                                                    <div class="bg-base-200 p-2 rounded">
                                                        <div class="flex justify-between items-center mb-1">
                                                            <span class="text-xs font-bold">Journée {{ journee.numero }} : {{ journee.nom }}</span>
                                                            {% if journee.parties|length > 0 %}
                                                                <a class="btn btn-ghost btn-xs text-info" href="{{ path("admin_partie_getpartiecalendar", {'id': poule.id, 'journee':journee.id}) }}">Détails</a>
                                                            {% endif %}
                                                        </div>
                                                        <ul class="space-y-1">
                                                            <ul class="space-y-2">
                                                                {% for partie in journee.parties %}
                                                                    <li class="text-[11px] flex items-center justify-between bg-base-100 p-2 rounded shadow-sm hover:bg-base-200 transition-colors group">
                                                                        <div class="flex items-center gap-2 flex-1">
                                                                            <span class="font-semibold">{{ partie.nomReception }}</span>
                                                                            <span class="opacity-40 text-[9px]">VS</span>
                                                                            <span class="font-semibold">{{ partie.nomDeplacement }}</span>
                                                                            <span class="badge badge-xs font-mono">{{ partie.NbSetGagnantReception }} - {{ partie.NbSetGagnantDeplacement }}</span>
                                                                        </div>

                                                                        <div class="flex items-center gap-1">
                                                                            {# BOUTON MODIFIER : Redirige vers le calendrier spécifique de cette journée #}
                                                                            <a href="{{ path('admin_partie_getpartiecalendar', {'id': poule.id, 'journee': journee.id, 'editPartie': partie.id}) }}"
                                                                               class="btn btn-ghost btn-xs text-info p-1"
                                                                               title="Modifier l'horaire ou le lieu sur le calendrier">
                                                                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                                                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
                                                                                </svg>
                                                                            </a>

                                                                            {# BOUTON SUPPRIMER : Formulaire avec protection CSRF et confirmation #}
                                                                            <form action="{{ path('admin_partie_delete', {'id': partie.id}) }}" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce match ? Cette action est irréversible.');" class="flex items-center">
                                                                                <input type="hidden" name="_method" value="DELETE">
                                                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ partie.id) }}">
                                                                                <button type="submit" class="btn btn-ghost btn-xs text-error p-1" title="Supprimer le match">
                                                                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                                                                                        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.244 2.244 0 0 1-2.244 2.077H8.084a2.244 2.244 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                                                                    </svg>
                                                                                </button>
                                                                            </form>
                                                                        </div>
                                                                    </li>
                                                                {% else %}
                                                                    <li class="text-xs italic opacity-50">Aucun match planifié.</li>
                                                                {% endfor %}
                                                            </ul>
                                                        </ul>
                                                    </div>
                                                {% else %}
                                                    <em class="text-xs">Aucune journée créée</em>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="mt-8 flex gap-2">
            <a class="btn btn-sm btn-outline" href="{{ path('admin_saison_index') }}">Retour aux saisons</a>
            <a class="btn btn-sm btn-success text-white" href="{{ path('admin_saison_new') }}">Nouvelle saison</a>
        </div>
    </div>
{% endblock %}
