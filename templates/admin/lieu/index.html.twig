{% extends 'base.html.twig' %}

{% block title %}Tous les lieux{% endblock %}

{% block body %}
    <h1>Tous les lieux</h1>
    <a class="btn btn-success btn-sm mt-3 mb-3" href="{{ path('admin_lieu_new') }}"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
         Créer un nouveau lieu</a>
<div class="overflow-x-auto rounded-box border border-base-content/5 w-4/5 bg-base-100">
    <table class="border border-solid table table-xs table-zebra">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Jour de réception</th>
                <th>Nombre de terrains</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lieu in lieux %}
            <tr>
                <td>{{ lieu.id }}</td>
                <td>{{ lieu.nom }}</td>
                <td>{{ lieu.adresse }}</td>
                <td>{{ lieu.jour }} - {{ lieu.heure|format_time('short') }}</td>
                <td>{{ lieu.nbTerrains }}</td>
                <td class="flex items-center gap-2">
{#                    <a href="{{ path('admin_lieu_show', {'id': lieu.id}) }}">show</a>#}
                    <a class="btn btn-sm btn-neutral" href="{{ path('admin_lieu_edit', {'id': lieu.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                        </svg>Modifier</a>
                    {{ include('admin/lieu/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
