{% extends 'base.html.twig' %}

{% block title %}Liste des poules{% endblock %}

{% block body %}
    <h1>Liste des poules</h1>
    <a class="btn btn-success btn-sm mt-3 mb-3" href="{{ path('admin_poule_new') }}"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        Créer une nouvelle poule</a>
<div class="overflow-x-auto rounded-box border border-base-content/5 w-4/5 bg-base-100">
    <table class="border border-solid table table-xs table-zebra">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Saison/Phase</th>
                <th>Nombre équipes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for poule in poules %}
            <tr>
                <td>{{ poule.id }}</td>
                <td>{{ poule.nom }}</td>
                <td>{{ poule.phase.saison.nom }} - {{ poule.phase.nom }}</td>
                <td>{{ poule.equipes|length }}</td>
                <td class="flex items-center gap-2">
                    <a class="btn btn-sm btn-neutral" href="{{ path('admin_poule_edit', {'id': poule.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                        </svg>Modifier</a>
                    {{ include('admin/poule/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
