{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <h1>Utilisateur {{user.email}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_user_index') }}" class="btn btn-sm btn-info">Retourner Ã  la liste des utilisateurs</a>

    <a href="{{ path('admin_user_edit', {'id': user.id}) }} " class="btn btn-sm btn-neutral">Modifier l'utilisateur</a>

    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
